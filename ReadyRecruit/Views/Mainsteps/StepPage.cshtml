@model IEnumerable<ReadyRecruit.Models.Pages>
@using ReadyRecruit.Models

@{
    ViewBag.Title = "Roadmap";
}
<div class="outlinePage">
    @{
        var one = (Pages)ViewData["PageOne"];
    }

    <section id="Step1">
        <div class="container">
            <div class="row">
                <div class="col-md-8 outline">
                    <div class="row">
                        <h1>@one.Title</h1><hr />
                        @for (int i = 1; i <= one.NumHeadings; i++)
                        {
                            one.Ihead = i;
                            <h2>@one.Headings[i]</h2>
                            for (int j = 1; j <= one.NumSubsteps[i]; j++)
                            {
                                one.Jsub = j;
                                <h3>
                                    <a href="@Url.Action("ToggleDoneSub",new { id = one.SStatID[i,j] })">
                                        @if (one.IsSubDone[i, j])
                                        {
                                            <span class="glyphicon glyphicon-check"></span>
                                        }
                                        else
                                        {
                                            <span class="glyphicon glyphicon-unchecked"></span>
                                        }
                                    </a>
                                    @one.Substeps[i, j]
                                </h3>
                            }
                        }
                    </div>
                    <div class="row selections">
                        <hr />
                        <button type="button" class="btn btn-default">
                            @Html.ActionLink("Yes", "StepPage", "Mainsteps", protocol: null, hostName: null, fragment: "Step2", routeValues: null, htmlAttributes: null)
                        </button>
                        <button type="button" class="btn btn-default">
                            @Html.ActionLink("No", "StepPage", "Mainsteps", protocol: null, hostName: null, fragment: "Step2", routeValues: null, htmlAttributes: null)
                            @*popup a window to congratulate them on their decision and give them
                                option to continue to explore or logoff*@
                        </button>
                        <button type="button" class="btn btn-default">
                            @Html.ActionLink("Undecided", "StepPage", "Mainsteps", protocol: null, hostName: null, fragment: "Step2", routeValues: null, htmlAttributes: null)
                        </button>
                    </div>
                </div>@* end of col-md-8 *@

                <div class="col-md-4 rightcolumn">
                    <div class="row nextprev">
                        @*<a href="#" class="glyphicon glyphicon-arrow-left left"></a>
                        <a href="#" class="left">Prev</a>*@
                        <a href="#Step2" class="glyphicon glyphicon-arrow-right right"></a>
                        <a href="#Step2" class="right">Next</a>
                    </div>
                    <div class="row">
                        <p>There can be lots of links and information here.  We have articles from API's, forums, testimonial videos, or links to newsletters.  We can also put the overall roadmap here -- the main steps.</p>
                    </div>
                    <div class="row bar">
                        <div class="progress-bar-striped active progress-bar-warning" role="progressbar" aria-valuenow="70"
                             aria-valuemin="0" aria-valuemax="100" style="width:70%">
                            <span>70% Complete</span>
                        </div>
                    </div>
                    <div class="row pic">
                        @*<img src="~/Content/images/iwojima.jpg" />*@
                    </div>
                </div>

            </div>
        </div>

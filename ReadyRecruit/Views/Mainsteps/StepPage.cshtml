                                pages.Ihead = i;
                                <h2>@pages.Headings[m, i]</h2>
                                for (int j = 1; j <= pages.NumSubsteps[m, i]; j++)
                                {
                                    pages.Jsub = j;
                                    <h3>
                                        <a id="updateprogress" href="@Url.Action("ToggleDoneSub", new { id = pages.SStatID[m, i, j] })">
                                            @if (pages.IsSubDone[m, i, j])
                                            {
                                                <span class="glyphicon glyphicon-check"></span>
                                                progress = pages.PointsEarned * 100 / pages.PointsTotal;
                                            }
                                            else
                                            {
                                                <span class="glyphicon glyphicon-unchecked"></span>
                                                progress = pages.PointsEarned * 100 / pages.PointsTotal;
                                            }
                                        </a>
                                        @pages.Substeps[m, i, j]
                                    </h3>
                                }
                            }

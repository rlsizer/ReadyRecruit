@model IEnumerable<ReadyRecruit.Models.Pages>
@using ReadyRecruit.Models

@{
    ViewBag.Title = "Roadmap";
}

@{
    var one = (Pages)ViewData["PageOne"];
}

<section id="Step1">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row outline">
                    <h1>@one.Title</h1><hr />
                    @for (int i = 1; i <= one.NumHeadings; i++)
                    {
                        <h2>@one.Headings[i]</h2>
                        for (int j = 1; j <= one.NumSubsteps[i]; j++)
                        {
                            <h3>
                                <a href="@Url.Action("ToggleDone", new { id = one.LinkID, id2 = one.SubID[i,j], id3 = 3})">
                                    @if (one.IsSubDone[i, j])
                                    {
                                        <span class="glyphicon glyphicon-check"></span>
                                    }
                                    else
                                    {
                                        <span class="glyphicon glyphicon-unchecked"></span>
                                    }
                                </a>
                                @one.Substeps[i, j]
                            </h3>
                        }
                    }

                </div>
                <div class="row">
                    @*@Html.ActionLink("Yes", "#Step2")
                        @Html.ActionLink("No", "MilitaryNotRight")*@
                    @*popup a window to congratulate them on their decision and give them
                        option to continue to explore or logoff*@
                </div>
            </div>


            <div class="col-md-4">
                <div class="row">

                </div>
                <div class="row progress-bar-striped">

                </div>
                <div class="row pic">

                </div>
            </div>
        </div>
    </div>





</section>

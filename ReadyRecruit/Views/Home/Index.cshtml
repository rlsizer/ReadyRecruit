@{
    ViewBag.Title = "Home Page";
}

<section id="homepage">

    <!--Jumbotron-->

    <div class="container">
        <div class="row">

            <div class="col-md-7 intro">
                <h2 class="fontStyleTitles">Ready Recruit</h2>
                <p class="paragraphFontStyle">
                    We are here to help you make one of the most important decisions of
                    your life! Whether your thinking about joining, already in the process
                    of joing, or even if you have no clue about what the Military can
                    offer or if you qualify. We are here to assit with all of the above.
                </p>
                <p class="paragraphFontStyle">
                    You will be given a roadmap based off your decision, a time frame based
                    off your schedule, and resources to help with your career path.
                    If you have an account please log in or please register below.
                </p>
                <button class="btn btn-primary">@Html.ActionLink("Register Now", "Register", "Account")</button>
            </div>

            <div class="col-md-5 Ryan">
                <!--TRAILER SECTION-->
                <h1 class="container" id="trailer"><iframe width="500" height="275" src="https://youtu.be/GHWhsmwOHT4" frameborder="0" allowfullscreen></iframe></h1>
            
            </div>

        </div>

        <div id="myCarousel" class="carousel slide col-md-12" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Content/images/flag1.jpg" />
                </div><!-- End Item -->

                <div class="item">
                    <img src="~/Content/images/jettakeoff.jpg" />
                </div><!-- End Item -->

                <div class="item">
                    <img src="~/Content/images/navy.jpg" />
                </div><!-- End Item -->

                <div class="item">
                    <img src="~/Content/images/soldiersdessert.jpg" />
                </div><!-- End Item -->

                <div class="item">
                    <img src="~/Content/images/wall.jpg" />
                </div><!-- End Item -->

            </div><!-- End Carousel Inner -->

            <ul class="list-group col-md-3 carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ul>
        </div><!-- End Carousel -->

    </div><!-- End Container -->

</section>